config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Nudge Bindings
bind right:ctrl;alt;cmd nudge +10% +0
bind left:ctrl;alt;cmd  nudge -10% +0
bind up:ctrl;alt;cmd    nudge +0   -10%
bind down:ctrl;alt;cmd  nudge +0   +10%

# Corner Bindings
bind 1:ctrl;shift corner top-left resize:screenSizeX/2;screenSizeY/2
bind 2:ctrl;shift corner top-right resize:screenSizeX/2;screenSizeY/2
bind 3:ctrl;shift corner bottom-left resize:screenSizeX/2;screenSizeY/2
bind 4:ctrl;shift corner top-left resize:screenSizeX/2;screenSizeY/2

# Focus Bindings
bind 1:ctrl focus 'Google Chrome'
bind 2:ctrl focus 'Sublime Text 2'
bind 3:ctrl focus 'iTerm'
bind 4:ctrl focus 'Slack'

# Halfsies Bindings
bind left:ctrl;alt corner top-left resize:screenSizeX/2;screenSizeY
bind right:ctrl;alt corner top-right resize:screenSizeX/2;screenSizeY
bind up:ctrl;alt corner top-left resize:screenSizeX;screenSizeY
bind down:ctrl;alt corner bottom-left resize:screenSizeX;screenSizeY/2
